        <color>00000000</color>
        <maxLogoCount>11</maxLogoCount>
		<logoAlignment>center</logoAlignment> 
         <zIndex>50</zIndex>			
      </carousel>

      <image name="background2" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/bg.png</path>
         <zIndex>2</zIndex>          
      </image>  
                 
      <text name="systemInfo">     
         <pos>0 -0.005</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>ffffff</color>
         <fontPath>./_inc/fonts/TechnoRaceItalic-eZRWe.otf</fontPath>
	     <fontSize>0.025</fontSize>
         <zIndex>7</zIndex>	     
      </text>            
   </view>
</feature>


